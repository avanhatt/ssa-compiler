a11 := 1; 
a12 := 2;
a21 := 1; 
a22 := 2;

b11 := 10; 
b12 := 20;
b21 := 10; 
b22 := 20;

c11a := a11 * b11; 
c12a := a11 * b12;
c21a := a21 * b11; 
c22a := a21 * b12;

c11b := a12 * b21; 
c12b := a12 * b22;
c21b := a22 * b21; 
c22b := a22 * b22;

c11ab := c11a + c11b; 
c12ab := c12a + c12b;
c21ab := c21a + c21b; 
c22ab := c22a + c22b;